<%= form_with scope: :user, url: registration_path(:user), local: true, data: { turbo: false } do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %><br>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再入力" %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :profile, "プロフィール" %><br>
    <%= f.text_area :profile %>
  </div>

  <div class="field">
    <%= f.label :occupation, "所属" %><br>
    <%= f.text_field :occupation %>
  </div>

  <div class="field">
    <%= f.label :position, "役職" %><br>
    <%= f.text_field :position %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: :form__btn %>
  </div>
<% end %>
